<?xml version="1.0"?>
<project name="TakeWebsiteOffline"
         default="take-website-offline"
         xmlns="http://nant.sf.net/release/0.86-beta1/nant.xsd">

  <!-- PUBLIC TARGETS -->

  <target name="take-website-offline">
    <if test="${file::exists(dir.deploy + '\error\app_offline.htm')}">
      <copy file="${dir.deploy}\error\app_offline.htm"
            tofile="${dir.deploy}\app_offline.htm"
            overwrite="true" />
    </if>
  </target>
</project>
