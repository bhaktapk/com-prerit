<%@ Import Namespace="Com.Prerit.Web.Controllers" %>
<%@ Import Namespace="Microsoft.Web.Mvc" %>
<%@ Master Language="C#" Inherits="System.Web.Mvc.ViewMasterPage<Com.Prerit.Web.Models.Shared.DefaultMasterModel>" %>

