<?xml version="1.0"?>
<project name="TakeWebsiteOffline"
         default="take-website-offline"
         xmlns="http://nant.sf.net/release/0.86-beta1/nant.xsd">

  <!-- PUBLIC TARGETS -->

  <target name="take-website-offline">
    <if test="${file::exists(dir.deploy + '\service-unavailable-web.config')}">
      <copy file="${dir.deploy}\service-unavailable-web.config"
          tofile="${dir.deploy}\web.config"
          overwrite="true" />
    </if>
  </target>
</project>
